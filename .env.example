# ==========================================
# MuseTalk Server Configuration
# ==========================================

# --- System Settings ---
# GPU Device ID to use (default: 0)
MUSETALK_GPU_ID=0

# Server Port (default: 8000)
MUSETALK_PORT=8001

# Server host bind address (use 0.0.0.0 for LAN access)
MUSETALK_HOST=0.0.0.0

# Path to FFMPEG executable (default: "ffmpeg" - assumes it's in system PATH)
# If using a specific binary, provide the absolute path here.
MUSETALK_FFMPEG_PATH=ffmpeg

# --- Model Paths (Advanced) ---
# VAE Model Type (default: "sd-vae")
MUSETALK_VAE_TYPE=sd-vae

# UNet Config Path
MUSETALK_UNET_CONFIG=./models/musetalk/musetalk.json

# UNet Model Path
MUSETALK_UNET_MODEL_PATH=./models/musetalk/pytorch_model.bin

# Whisper Model Directory
MUSETALK_WHISPER_DIR=./models/whisper

# Inference Config Path
MUSETALK_INFERENCE_CONFIG=./configs/inference/realtime.yaml

# --- Inference Settings ---
# Batch size for inference (Lower this if you encounter OOM errors)
# Default: 4 (Safe for most GPUs with 8GB+ VRAM)
MUSETALK_BATCH_SIZE=4

# Output Video FPS (default: 25)
MUSETALK_FPS=25

# --- Audio Settings ---
# Audio padding (default: 2)
MUSETALK_AUDIO_PADDING_LENGTH_LEFT=2
MUSETALK_AUDIO_PADDING_LENGTH_RIGHT=2

# --- Preprocessing Settings ---
# Use saved coordinates to speed up processing if the video has been processed before
# Default: False
MUSETALK_USE_SAVED_COORD=False

# Save found coordinates to disk for future use (default: False)
MUSETALK_SAVED_COORD=False

# Face parsing mode: "jaw" or "face" (default: "jaw")
MUSETALK_PARSING_MODE=jaw

# Bounding box shift (default: 0)
MUSETALK_BBOX_SHIFT=0

# Extra margin for face cropping (default: 10)
MUSETALK_EXTRA_MARGIN=10

# Cheek widths for cropping (default: 90)
MUSETALK_LEFT_CHEEK_WIDTH=90
MUSETALK_RIGHT_CHEEK_WIDTH=90

# --- Output Settings ---
# Directory to save results (default: "./results")
MUSETALK_RESULT_DIR=./results

# Skip saving intermediate images to save space/time (default: False)
MUSETALK_SKIP_SAVE_IMAGES=False
